{
  "compilerOptions": {
    "jsx": "react",

    "target": "ES6",

    "module": "ES2020",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"],
      "@layouts/*": ["layouts/*"],
      "@services/*": ["services/*"],
      "@services": ["services"],
      "@hooks/*": ["hooks/*"],
      "@hooks": ["hooks"],
      "@assets/*": ["assets/*"],
      "@styles": ["styles"],
      "@redux/*": ["redux/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": false,
    "skipLibCheck": true
  },
  "include": ["**/*", "src/index.tsx", "src/index.tsx"],
  "exclude": ["node_modules", ".vscode"]
}
